                <TextBlock Foreground="#F5D21F" Text="Cím: Vostok, Űrhajós Körút 420." VerticalAlignment="Center" HorizontalAlignment="Center" Margin="180,10" FontSize="20" FontFamily="Unispace"  Width="600" TextAlignment="Center"/>



            </StackPanel>
        </Grid>
